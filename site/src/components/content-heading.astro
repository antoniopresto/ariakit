---
import type { Polymorphic } from "astro/types";

type HeadingTag = "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
type Props<T extends HeadingTag> = Polymorphic<{ as: T }>;

const { as: Tag = "h1", ...props } = Astro.props as Props<HeadingTag>;
---

<Tag
  class:list={[
    "relative scroll-mt-[calc(var(--header-height)+1.25em)]",
    "ak-container-size-content/0 ak-container",
    props.class,
  ]}
  {...props}
>
  <slot />
</Tag>
